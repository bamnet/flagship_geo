<h1><%= @layer.name %> points</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @points.each do |point| %>
  <tr>
    <td><%= point.name %></td>
    <td><%= point.description %></td>
    <td><%= point.latitude %></td>
    <td><%= point.longitude %></td>
    <td><%= link_to 'Show', [@layer, point] %></td>
    <td><%= link_to 'Edit', edit_layer_point_path(@layer, point) %></td>
    <td><%= link_to 'Destroy', [@layer, point], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

